{
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "annotations": {
      "description": "Deployment template for splunk-forwarder",
      "tags": "angular"
    },
    "name": "splunk-forwarder"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "ImageStream",
      "metadata": {
        "annotations": {
          "description": "runtime images stream"
        },
        "name": "${SOURCE_NAME}"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "replicas": 2,
        "selector": {
          "app": "${NAME}",
          "deploymentconfig": "${NAME}"
        },
        "strategy": {
          "rollingParams": {
            "intervalSeconds": 1,
            "maxSurge": "25%",
            "maxUnavailable": "25%",
            "timeoutSeconds": 600,
            "updatePeriodSeconds": 1
          },
          "type": "Rolling"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "app": "${NAME}",
              "deploymentconfig": "${NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "${SOURCE_NAME}",
                "imagePullPolicy": "Always",
                "name": "${NAME}",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "SERVICE_IP",
                    "value": "${SERVICE_IP}"
                  },
                  {
                    "name": "SERVICE_PORT",
                    "value": "${SERVICE_PORT}"
                  },
                  {
                    "name": "SERVICE_USE_AUTH",
                    "value": "${SERVICE_USE_AUTH}"
                  },
                  {
                    "name": "SERVICE_AUTH_TOKEN",
                    "value": "${SERVICE_AUTH_TOKEN}"
                  },
                  {
                    "name": "FILE_LOG_NAME",
                    "value": "${FILE_LOG_NAME}"
                  },
                  {
                    "name": "FILE_LOG_LEVEL",
                    "value": "${FILE_LOG_LEVEL}"
                  },
                  {
                    "name": "USE_SPLUNK",
                    "value": "${USE_SPLUNK}"
                  },
                  {
                    "name": "SPLUNK_URL",
                    "value": "${SPLUNK_URL}"
                  },
                  {
                    "name": "RETRY_COUNT",
                    "value": "${RETRY_COUNT}"
                  },
		  {
                    "name": "SPLUNK_AUTH_TOKEN",
                    "value": "${SPLUNK_AUTH_TOKEN}"
                  }
                ],
                "resources": {
                  "requests": {
                    "cpu": "100m",
                    "memory": "100Mi"
                  },
                  "limits": {
                    "cpu": "250m",
                    "memory": "200Mi"
                  }
                }
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "securityContext": {
            },
            "terminationGracePeriodSeconds": 30
          }
        },
        "test": false,
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_NAMESPACE}",
                "name": "${SOURCE_NAME}:${TAG_NAME}"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "ports": [
          {
            "name": "8080-tcp",
            "port": 8080,
            "protocol": "TCP",
            "targetPort": 8080
          }
        ],
        "selector": {
          "app": "${NAME}",
          "deploymentconfig": "${NAME}"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "host": "${APPLICATION_DOMAIN}",
        "port": {
          "targetPort": "8080-tcp"
        },
        "tls": {
          "insecureEdgeTerminationPolicy": "Redirect",
          "termination": "edge"
        },
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        }
      }
    }
  ],
  "parameters": [
    {
      "description": "The name of the source image",
      "displayName": "Source Name",
      "name": "SOURCE_NAME",
      "required": true,
      "value": "splunk-forwarder"
    },
    {
      "description": "The name assigned to all of the openshift objects defined in this template. It is also the name of runtime image you want.",
      "displayName": "Name",
      "name": "NAME",
      "required": true,
      "value": "splunk-forwarder"
    },
    {
      "description": "The exposed hostname that will route to the service, e.g., myappname.pathfinder.gov.bc.ca, if left blank a value will be defaulted.",
      "displayName": "Application Hostname",
      "name": "APPLICATION_DOMAIN",
      "value": "gcpe-mygovbc-splunk-forwader-dev.pathfinder.gov.bc.ca"
    },

    {
      "description": "The namespace where to get the above image name",
      "displayName": "Image Namespace",
      "name": "IMAGE_NAMESPACE",
      "required": true,
      "value": "gcpe-mygovbc-msp-tools"
    },
    {
      "description": "The TAG name for this environment, e.g., dev, test, prod",
      "displayName": "Env TAG name",
      "name": "TAG_NAME",
      "value": "dev"
    },
    {
      "description": "IP address of where splunk-forwarder runs",
      "displayName": "SERVICE_IP",
      "name": "SERVICE_IP",
      "required": true,
      "value": "0.0.0.0"
    },
    {
      "description": "Port where splunk-forwarder runs",
      "displayName": "SERVICE_PORT",
      "name": "SERVICE_PORT",
      "required": true,
      "value": "8080"
    },
    {
      "description": "Use Authorization token?",
      "displayName": "SERVICE_USE_AUTH",
      "name": "SERVICE_USE_AUTH",
      "required": true,
      "value": "true"
    },
    {
      "description": "Authorization token required to use the splunk-forwarder service",
      "displayName": "SERVICE_AUTH_TOKEN",
      "name": "SERVICE_AUTH_TOKEN",
      "required": true,
      "value": ""
    },
    {
      "description": "Directory and name of File logs (will be prepended with day's date",
      "displayName": "FILE_LOG_NAME",
      "name": "FILE_LOG_NAME",
      "required": true,
      "value": "/var/logs/msp.log"
    },
    {
      "description": "Log level for File logs (debug, info, etc..)",
      "displayName": "FILE_LOG_LEVEL",
      "name": "FILE_LOG_LEVEL",
      "required": true,
      "value": "info"
    },
    {
      "description": "Use a remote splunk servicer? If no, only log to files",
      "displayName": "USE_SPLUNK",
      "name": "USE_SPLUNK",
      "required": true,
      "value": "false"
    },
    {
      "description": "The URL of the remote Splunk Server",
      "displayName": "SPLUNK_URL",
      "name": "SPLUNK_URL",
      "required": true,
      "value": "https://host:port/service"
    },
    {
      "description": "How many times to retry the remote Splunk Server?",
      "displayName": "RETRY_COUNT",
      "name": "RETRY_COUNT",
      "required": true,
      "value": "1"
    },
    {
      "description": "Authorization token required to use the splunk server",
      "displayName": "SPLUNK_AUTH_TOKEN",
      "name": "SPLUNK_AUTH_TOKEN",
      "required": true,
      "value": ""
    }
  ]
}
